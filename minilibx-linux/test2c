#include <stdlib.h>
#include "mlx_int.h"
#include <stdio.h>

int	main()
{
	void	*mlx;
	void	*mlx_win;

	mlx = mlx_init();
	mlx_win = mlx_new_window(mlx, 1920, 1080, "Hello world!");
	mlx_loop(mlx);
	
	return 0;
}

